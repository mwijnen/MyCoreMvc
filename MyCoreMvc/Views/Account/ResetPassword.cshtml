@model ResetPassword

<div style="margin-top:100px;margin-left:100px;margin-right:100px;">
    <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-group">

        <div class="form-group row">
            <input asp-for=@Model.Id type="hidden" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Token type="hidden" class="form-control" placeholder="Token" />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Password type="password" class="form-control" />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Repassword type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
