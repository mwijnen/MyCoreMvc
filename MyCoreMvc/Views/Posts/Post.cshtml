@model Post

<div style="margin-top:100px;margin-left:100px;margin-right:100px;">
    <form asp-controller="Posts" asp-action="Create" method="post" class="form-group">

        <div class="form-group row">
            <input asp-for=@Model.Id type="text" class="form-control" readonly/>
        </div>
        
        <div class="form-group row">
            <input asp-for=@Model.VersionId type="text" class="form-control" readonly />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Title type="text" class="form-control" readonly/>
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Subtitle type="text" class="form-control" readonly/>
        </div>

        <div class="form-group row">
            <textarea asp-for=@Model.Abstract type="text" class="form-control" rows="6" readonly></textarea>
        </div>

        <div class="form-group row">
            <textarea asp-for=@Model.Body type="text" class="form-control" rows="20" readonly></textarea>
        </div>
    </form>
</div>