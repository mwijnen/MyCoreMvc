@model Post

<div style="margin-top:100px;margin-left:100px;margin-right:100px;">
    <form asp-controller="Posts" asp-action=@Model.FormAction method="post" class="form-group">

        <div class="form-group row">
            <input asp-for=@Model.Title type="text" class="form-control" placeholder="Title" />
        </div>

        <div class="form-group row">
            <input asp-for=@Model.Subtitle type="text" class="form-control" placeholder="Subtitle" />
        </div>

        <div class="form-group row">
            <textarea asp-for=@Model.Abstract type="text" class="form-control" placeholder="Abstract" rows="6"></textarea>
        </div>

        <div class="form-group row">
            <textarea asp-for=@Model.Body type="text" class="form-control" placeholder="Body" rows="20"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
