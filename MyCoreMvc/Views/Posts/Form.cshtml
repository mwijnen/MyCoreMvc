@model Post

<form asp-controller="Posts" asp-action="Create" method="post" class="form-group">
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" placeholder="Title" />
    </div>

    <div class="form-group">
        <label asp-for="Subtitle">Subtitle:</label>
        <input asp-for="Subtitle" />
    </div>

    <div class="form-group">
        <label asp-for="Abstract">Abstract:</label>
        <input asp-for="Abstract" />
    </div>

    <div class="form-group">
        <label asp-for="Body">Body:</label>
        <input asp-for="Body" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

